<?xml version="1.0" encoding="utf-8"?>

<com.google.android.material.card.MaterialCardView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardElevation="4dp"
    app:cardCornerRadius="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/image"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:contentDescription="@string/monster_photo"
            android:scaleType="centerInside"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/ariat_flyhigh"
            android:src="@drawable/error"
            />

        <ImageView
            android:id="@+id/mini_base"
            android:layout_width="90dp"
            android:layout_height="60dp"
            app:layout_constraintTop_toBottomOf="@id/image"
            app:layout_constraintStart_toStartOf="parent"
            android:padding="10dp"
            tools:src="@drawable/ariat_flyhigh"
            android:src="@drawable/chisos_no1"
            />

        <ImageView
            android:id="@+id/mini_one"
            android:layout_width="90dp"
            android:layout_height="60dp"
            app:layout_constraintTop_toBottomOf="@id/image"
            app:layout_constraintStart_toEndOf="@id/mini_base"
            android:padding="10dp"
            tools:src="@drawable/ariat_flyhigh1"
            android:src="@drawable/chisos_no11"
            />

        <ImageView
            android:id="@+id/mini_two"
            android:layout_width="90dp"
            android:layout_height="60dp"
            app:layout_constraintTop_toBottomOf="@id/image"
            app:layout_constraintStart_toEndOf="@id/mini_one"
            android:padding="10dp"
            tools:src="@drawable/ariat_flyhigh2"
            android:src="@drawable/chisos_no12"
            />

        <ImageView
            android:id="@+id/mini_three"
            android:layout_width="90dp"
            android:layout_height="60dp"
            app:layout_constraintTop_toBottomOf="@id/image"
            app:layout_constraintStart_toEndOf="@id/mini_two"
            android:padding="10dp"
            tools:src="@drawable/ariat_flyhigh3"
            android:src="@drawable/chisos_no13"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>